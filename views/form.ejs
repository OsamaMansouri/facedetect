<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BD LES DOMAINES</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />

    <!-- Google Fonts - Montserrat -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Montserrat"
    />

    <script src="/js/face-api.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <style>
      @font-face {
        font-family: "NexaHeavy-Regular";
        font-style: normal;
        font-weight: 400;
        src: url("/fonts/Nexa Heavy.otf") format("opentype");
      }

      h3,
      h4,
      h5,
      h6,
      p,
      span,
      button,
      input,
      div,
      a {
        font-family: "NexaHeavy-Regular", Helvetica;

        font-weight: 800 !important;
        text-transform: uppercase;
        color: #fff;
        text-decoration: none;
      }

      .form-control {
        color: #de2551;
      }

      label {
        font-size: 24px;
      }

      .btn-primary {
        color: #fff;
        background-color: #019a4a;
        border-color: #019a4a;
      }

      .btn {
        padding: 0.375rem 3.5rem;
        border-radius: 10px;
        box-shadow: -10px 17px 30px #000000b3;
        font-size: 1.5rem;
      }
      body,
      html {
        margin: 0;
        padding: 0;
        height: 100%;
      }

      .main {
        position: relative;
        margin: auto;
        overflow: hidden;
        width: 1920px;
        height: 1080px;
      }

      .main::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url(/mewbc.png);
        filter: blur(23.1210994720459px) brightness(101.10082995891571%);
        background-color: rgba(0, 0, 0, 0);
        z-index: -1; /* Ensure the blurred layer is behind other content */
      }

      .main img {
        position: absolute;
        top: 54%;
        left: 32%;
        transform: translate(-50%, -50%);
        max-width: 100%;
        max-height: 100%;
      }

      .section {
        width: 687px;
        z-index: 10;
        height: 515px;
        position: absolute;
        top: 47%;
        left: 74%;
        transform: translate(-50%, -50%);
        max-width: 100%;
        max-height: 100%;
        opacity: 1;
      }

      .image-screenface {
        top: 44% !important;
        left: 57% !important;
        --z-index: 3;
        background-color: transparent;
        background-size: 100% 100%;
        height: 105px;
        left: calc(50% - 71px);
        object-fit: cover;
        opacity: 1;
        position: absolute;
        top: calc(50% + 47px);
        width: 135px;
      }

      .ocp {
        --z-index: 1;
        background-color: transparent;
        background-size: 100% 100%;
        height: 150px;
        left: 1750px !important;
        object-fit: cover;
        opacity: 1;
        position: absolute;
        top: 984px !important;
        width: 282px;
      }

      .chapeau {
        --z-index: 4;
        background-color: transparent;
        background-size: 100% 100%;
        height: 94px;
        left: 1095px !important;
        object-fit: cover;
        opacity: 1;
        position: absolute;
        top: 384px !important;
        width: 146px;
      }

      .steps-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      /* Custom styling for steps */
      .step {
        display: none;
        transition: opacity 0.5s ease-in-out;
      }
      .step.active {
        display: block;
      }
      .step-content {
        padding: 20px;
        border-radius: 5px;
      }
      .btn-container {
        margin-top: 20px;
      }
      .btn-link {
        background-color: #019a4a;
        border: #019a4a;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }
      .btn-link:hover {
        background-color: #019a4a;
        border: #019a4a;
        color: #fff;
      }
      /* Add this CSS for styling the loader */
      .loader {
        border: 8px solid #f3f3f3;
        border-radius: 50%;
        border-top: 8px solid #019a4a;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -25px;
        margin-left: -25px;
        display: none; /* Hide the loader by default */
      }
      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <body>
    <div class="main">
      <img class="blur" src="/image-8-1@1x.png" alt="Centered Image" />
      <form id="userForm" action="/submitForm" method="post">
        <div class="section">
          <!-- Step 2: Fill Form -->
          <div class="step step-1 active">
            <div class="step-content">
              <h4 style="opacity: 0.42">ÉTAPE 1/3</h4>
              <br />
              <p style="font-size: 40px">
                ÉCRIVEZ VOTRE NOM PRÉNOM ET CLIQUEZ SUR CONTINUER
              </p>
              <br />
              <!-- Your form content here -->
              <div class="form-group">
                <input
                  style="
                    background-color: #ffffff;
                    border-radius: 17px;
                    box-shadow: inset 0px 3px 6px #00000069;
                    height: 60px;
                    opacity: 1;
                    width: 75%;
                  "
                  type="text"
                  class="form-control"
                  id="firstName"
                  name="firstName"
                  required
                  placeholder="NOM"
                />
              </div>
              <div class="form-group">
                <input
                  style="
                    background-color: #ffffff;
                    border-radius: 17px;
                    box-shadow: inset 0px 3px 6px #00000069;
                    height: 60px;
                    opacity: 1;
                    width: 75%;
                  "
                  class="form-control"
                  id="lastName"
                  name="lastName"
                  placeholder="PRENOM"
                />
              </div>
              <div class="form-group">
                <input
                  style="
                    background-color: #ffffff;
                    border-radius: 17px;
                    box-shadow: inset 0px 3px 6px #00000069;
                    height: 60px;
                    opacity: 1;
                    width: 75%;
                  "
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="EMAIL"
                />
              </div>
              <!--
              <div class="form-group">
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="sexe"
                    id="maleRadio"
                    value="male"
                  />
                  <label class="form-check-label" for="maleRadio">GARSON</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="sexe"
                    id="femaleRadio"
                    value="female"
                  />
                  <label class="form-check-label" for="femaleRadio"
                    >FILLE</label
                  >
                </div>
              </div>-->

              <div class="btn-container">
                <a href="/" class="btn btn-secondary prev-step">RETOUR</a>
                <div class="btn btn-primary next-step">CONTINUER</div>
              </div>
            </div>
          </div>

          <!-- Step 3: Submit -->
          <div class="step step-2">
            <div class="step-content">
              <h4 style="opacity: 0.42">ÉTAPE 2/3</h4>
              <br />
              <p style="font-size: 40px">
                PRENDRE UNE PHOTO POUR REMPLACER LE VISAGE
              </p>
              <div class="btn-container">
                <div class="btn btn-secondary prev-step">RETOUR</div>
                <button class="btn btn-primary" id="submitFormButton">
                  PRENDRE UNE PHOTO
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>

      <img class="ocp" src="/logo.png" alt="Centered Image" />
    </div>

    <!-- Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      $(document).ready(function () {
        $(".step-1").addClass("active");

        // When 'Next' button is clicked, show next step
        $(".next-step").click(function () {
          var currentStep = $(this).closest(".step");
          currentStep.removeClass("active").fadeOut(500, function () {
            currentStep.next(".step").fadeIn(500).addClass("active");
          });
        });

        // When 'Back' button is clicked, show previous step
        $(".prev-step").click(function () {
          var currentStep = $(this).closest(".step");
          currentStep.removeClass("active").fadeOut(500, function () {
            currentStep.prev(".step").fadeIn(500).addClass("active");
          });
        });
      });
    </script>
  </body>
</html>
