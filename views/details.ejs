<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LES DOMAINES AGRICOLES</title>

    <style>
      body,
      html {
        margin: 0;
        padding: 0;
        height: 100%;
      }

      .main {
        position: relative;
        margin: auto;
        overflow: hidden;
        width: 1920px;
        height: 1080px;
      }

      .main::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url(/mewbc.png);
        filter: blur(23.1210994720459px) brightness(101.10082995891571%);
        background-color: rgba(0, 0, 0, 0);
        z-index: -1; /* Ensure the blurred layer is behind other content */
      }

      .main img {
        position: absolute;
        top: 54%;
        left: 50%;
        transform: translate(-50%, -50%);
        max-width: 100%;
        max-height: 100%;
      }

      .image-screenface {
        top: 33% !important;
        left: 49.5% !important;
        --z-index: 3;
        background-color: transparent;
        background-size: 100% 100%;
        height: 222px;
        left: calc(50% - 71px);
        object-fit: cover;
        opacity: 1;
        position: absolute;
        top: calc(50% + 47px);
        width: 251px;
      }

      .ocp {
        --z-index: 1;
        background-color: transparent;
        background-size: 100% 100%;
        height: 149px;
        left: 1800px !important;
        object-fit: cover;
        opacity: 1;
        position: absolute;
        top: 970px !important;
        width: 129px;
      }

      .chapeau {
        --z-index: 4;
        background-color: transparent;
        background-size: 100% 100%;
        height: 94px;
        left: 1095px !important;
        object-fit: cover;
        opacity: 1;
        position: absolute;
        top: 384px !important;
        width: 146px;
      }
    </style>
  </head>
  <body>
    <div class="main">
      <img src="/image-8-1@1x.png" alt="Centered Image" />

      <% userData.forEach((screenshot) => { %> <% const imagePath =
      screenshot.backgroundOutput.replace(/\\/g, '/').split('public/')[1]; %>
      <img
        class="image-screenface"
        src="/<%= imagePath %>"
        alt="Centered Image"
      />
      <% }); %>

      <!--<img class="ocp" src="/mask-group-2-1@1x.png" alt="Centered Image" />-->
    </div>
  </body>
</html>
